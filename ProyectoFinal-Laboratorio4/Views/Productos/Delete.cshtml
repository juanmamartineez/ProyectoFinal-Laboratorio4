@model ProyectoFinal_Laboratorio4.Models.Producto

@{
    ViewData["Title"] = "Borrar producto";
}

<h1>Borrar producto</h1>

<h3>¿Estás seguro de que quieres eliminar este producto?</h3>
<div>
    <h4>Producto:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Descripción)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripción)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="~/images/productos/@Model.Imagen" class="img-thumbnail"
                     style="height:50px; width:50px" asp-append-version="true" />
            }
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Favorito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Favorito)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CategoríaProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoríaProducto.Descripción)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.MarcaProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MarcaProducto.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> 
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>

<script src="~/js//imagePreview.js"></script>